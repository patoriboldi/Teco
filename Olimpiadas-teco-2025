            // Funciones auxiliares
            const getRankings = (data, kpi) => {
                const dataWithTotals = data.map(seller => ({
                    ...seller,
                    totalKpis: Object.values(seller.kpis).reduce((sum, value) => sum + value, 0)
                }));

                const sorted = [...dataWithTotals].sort((a, b) => {
                    const kpiDiff = b.kpis[kpi] - a.kpis[kpi];
                    if (kpiDiff === 0) {
                        return b.totalKpis - a.totalKpis;
                    }
                    return kpiDiff;
                });

                const rankings = {};
                sorted.forEach((seller, index) => {
                    if (index < 3) {
                        rankings[seller.id] = index + 1;
                    }
                });
                return rankings;
            };

            const getMedalComponent = (rank) => {
                const style = { width: '12px', height: '12px', display: 'inline-block' };
                switch (rank) {
                    case 1:
                        return <span style={{...style, color: '#EAB308'}}>üèÜ</span>;
                    case 2:
                        return <span style={{...style, color: '#9CA3AF'}}>ü•à</span>;
                    case 3:
                        return <span style={{...style, color: '#D97706'}}>ü•â</span>;
                    default:
                        return null;
                }
            };

            const getAccumulatedMedallero = () => {
                const accumulated = {};
                const allVendors = ['Gabriela Baez', 'Karina Minadeo', 'Ludmila Canziani', 'Gabriel Forte', 
                                   'Dulce Druetta', 'German Iagrossi', 'Jorgelina Gonzalez', 'Veronica Gonzalez', 'Natalia Nievas'];
                
                allVendors.forEach(name => {
                    accumulated[name] = { goldCount: 0, silverCount: 0, bronzeCount: 0, totalActivity: 0 };
                });

                Object.keys(salesData).forEach(month => {
                    const monthData = salesData[month];
                    
                    monthData.forEach(seller => {
                        const goldCount = Object.keys(seller.kpis).filter(kpi => getRankings(monthData, kpi)[seller.id] === 1).length;
                        const silverCount = Object.keys(seller.kpis).filter(kpi => getRankings(monthData, kpi)[seller.id] === 2).length;
                        const bronzeCount = Object.keys(seller.kpis).filter(kpi => getRankings(monthData, kpi)[seller.id] === 3).length;
                        const totalActivity = Object.values(seller.kpis).reduce((sum, value) => sum + value, 0);
                        
                        accumulated[seller.name].goldCount += goldCount;
                        accumulated[seller.name].silverCount += silverCount;
                        accumulated[seller.name].bronzeCount += bronzeCount;
                        accumulated[seller.name].totalActivity += totalActivity;
                    });
                });

                return Object.entries(accumulated).map(([name, data]) => ({
                    name,
                    ...data,
                    totalMedals: data.goldCount + data.silverCount + data.bronzeCount
                }));
            };

